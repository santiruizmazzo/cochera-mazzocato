{
  "name": "Cochera App Dev",
  "dockerComposeFile": "../backend/docker-compose.yml",
  "service": "api",
  "workspaceFolder": "/app",
  "remoteUser": "root",
  "remoteEnv": {
    "GIT_USER_NAME": "${localEnv:GIT_USER_NAME}",
    "GIT_USER_EMAIL": "${localEnv:GIT_USER_EMAIL}"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "go.useLanguageServer": true,
        "go.formatTool": "gofmt",
        "go.lintTool": "golangci-lint",
        "go.lintFlags": [
          "--fast"
        ],
        "go.vetOnSave": "package",
        "go.testOnSave": false
      },
      "extensions": [
        "golang.go",
        "ritwickdey.LiveServer"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached"
  ],
  "postCreateCommand": "git config --global user.name \"$GIT_USER_NAME\" && git config --global user.email \"$GIT_USER_EMAIL\" && go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest"
}
